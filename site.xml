<?xml version="1.0" encoding="UTF-8"?>
<site>

    <types>

        <type type="types/contact" icon="fa fa-list-alt">
            <locale group="quiqqer/contact" var="admin.types.contact"/>
            <desc>
                <locale group="quiqqer/contact" var="admin.types.contact.desc"/>
            </desc>

            <!-- extra attributes -->
            <attributes>
                <attribute>quiqqer.contact.settings.receiver</attribute>
                <attribute>quiqqer.contact.settings.form</attribute>
                <attribute>quiqqer.contact.success</attribute>
                <attribute>quiqqer.contact.success_mail</attribute>
            </attributes>

            <tab name="quiqqer.contact">
                <text>
                    <locale group="quiqqer/contact" var="admin.types.contact.form"/>
                </text>
                <image>fa fa-list-alt</image>
                <onload require="package/quiqqer/contact/bin/SitePanel"/>
            </tab>

            <tab name="quiqqer.contact.success" type="wysiwyg">
                <text>
                    <locale group="quiqqer/contact" var="admin.types.contact.success"/>
                </text>
                <image>fa fa-check</image>
            </tab>

            <tab name="quiqqer.contact.success_mail">
                <text>
                    <locale group="quiqqer/contact" var="admin.types.contact.success_mail"/>
                </text>
                <image>fa fa-envelope</image>
                <onload require="package/quiqqer/contact/bin/controls/backend/ConfirmationEmail"/>
            </tab>
        </type>

    </types>

</site>
